mixin textField(options = {})
  -
    const { title = '', className = '', name = 'text-field', type = 'text', placeholder = '' } = options
    const classes = (className) ? `${className} text-field js-text-field` : 'text-field js-text-field'

  div(class != classes)
    if title
      h3.text-field__title #{ title }

    input.text-field__field(type != type, name != name, placeholder != placeholder)