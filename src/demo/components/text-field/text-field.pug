mixin textField(options = {})
  -
    const { 
      title = '', 
      className = '', 
      name = 'text-field', 
      type = 'text', 
      placeholder = '',
      modifier = '' 
      } = options
    const classes = (className) ? `${className} text-field js-text-field text-field_${modifier}` : `text-field js-text-field text-field_${modifier}`

  div(class != classes)
    if title
      h3.text-field__title #{ title }

    input.text-field__field.js-text-field__field(type != type, name != name, placeholder != placeholder)