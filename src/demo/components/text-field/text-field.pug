mixin textField({ title, name = 'text-field', type = 'text', placeholder = '', isCollection = false })

  - const collectionClass = (isCollection) ? 'text-field_collection' : ''

  div(class = ['text-field', 'js-text-field', collectionClass])
    if title
      h3.text-field__title #{ title }

    input.text-field__field.js-text-field__field(type = type, name = name, placeholder = placeholder)